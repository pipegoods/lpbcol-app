---
import { IPlayer } from '@models/ITeam'

interface Props {
  players: IPlayer[]
}

const { players } = Astro.props
---

<div class="relative overflow-x-auto shadow-md rounded-lg">
  <table class="w-full text-xs md:text-left text-black bg-slate-200">
    <thead>
      <tr>
        <th
          class="px-4 py-2 font-medium tracking-wider md:text-left text-gray-500 uppercase bg-gray-100 border-b border-gray-200 text-center"
          >#</th
        >
        <th
          class="px-4 py-2 font-medium tracking-wider md:text-left text-gray-500 uppercase bg-gray-100 border-b border-gray-200 text-center"
          >Nombre</th
        >
        <th
          class="px-4 py-2 font-medium tracking-wider md:text-left text-gray-500 uppercase bg-gray-100 border-b border-gray-200 text-center"
          >Posición</th
        >
        <th
          class="px-4 py-2 font-medium tracking-wider md:text-left text-gray-500 uppercase bg-gray-100 border-b border-gray-200 text-center"
          >Altura (cm)</th
        >
        <th
          class="px-4 py-2 font-medium tracking-wider md:text-left text-gray-500 uppercase bg-gray-100 border-b border-gray-200 text-center"
          >Peso (Kg)</th
        >
        <th
          title="Año de nacimiento"
          class="px-4 py-2 font-medium tracking-wider md:text-left text-gray-500 uppercase bg-gray-100 border-b border-gray-200 text-center"
          >YOB</th
        >
      </tr>
    </thead>
    <tbody>
      {
        players.map((player) => (
          <tr class="odd:bg-white even:bg-slate-100 border-b text-base hover:bg-slate-300">
            <td class="px-4 py-2 text-sm font-medium text-gray-900">
              {player.backNumber}
            </td>
            <td class="px-4 py-2 text-sm font-medium text-gray-900">
              <a
                class="hover:underline"
                href={player.urlPlayer}
                target="_blank"
              >
                {player.name}{' '}
              </a>
            </td>
            <td class="px-4 py-2 text-sm font-medium text-gray-900">
              {player.position}
            </td>
            <td class="px-4 py-2 text-sm font-medium text-gray-900">
              {player.height}
            </td>
            <td class="px-4 py-2 text-sm font-medium text-gray-900">
              {player.weight}
            </td>
            <td class="px-4 py-2 text-sm font-medium text-gray-900">
              {player.birthDate}
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>
