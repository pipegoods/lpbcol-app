---
import Layout from '../layout/Layout.astro'

const response = await fetch('https://lpbcol.pipegoods.workers.dev/teams')
const teams = await response.json()
---

<Layout title="Home">
  <h1>Home</h1>

  <ul>
    {
      teams.map((team) => (
        <li>
          <a href={team.id}>{team.name}</a>
          <img src={team.image} alt={`Logo de ${team.name}`} />
        </li>
      ))
    }
  </ul>
</Layout>
